{
    "name": "cnvs/canvas",
    "description": "Simple, Powerful Blog Publishing Platform",
    "keywords": ["php", "laravel", "blog", "canvas"],
    "license": "MIT",
    "authors": [
        {
            "name": "Todd Austin",
            "email": "austin.todd.j@gmail.com"
        }
    ],
    "require": {
        "barryvdh/laravel-debugbar": "2.4.3",
        "cnvs/easel": "dev-develop",
        "cnvs/paper-dark": "*",
        "doctrine/dbal": "2.6.2",
        "fzaninotto/faker": "1.7.1",
        "laravel/framework": "5.4.36"
    },
    "require-dev": {
        "laravel/browser-kit-testing": "2.0.1",
        "mockery/mockery": "1.0",
        "phpunit/phpunit": "6.4.1",
        "symfony/css-selector": "3.3.10",
        "symfony/dom-crawler": "3.3.10"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
