{
    "name": "cnvs/canvas",
    "description": "Simple, Powerful Blog Publishing Platform",
    "keywords": ["php", "laravel", "blog", "canvas"],
    "license": "MIT",
    "authors": [
        {
            "name": "Todd Austin",
            "email": "austin.todd.j@gmail.com"
        }
    ],
		"repositories": [
        {
            "type": "git",
            "url": "https://github.com/cnvs/easel"
        }
    ],
    "require": {
        "cnvs/paper-dark": "*",
        "doctrine/dbal": "2.5.*",
        "fzaninotto/faker": "~1.4",
        "cnvs/easel": "dev-feature/l5.4",
        "laravel/framework": "5.4.*",
        "barryvdh/laravel-debugbar": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "mockery/mockery": "0.9.*",
        "symfony/dom-crawler": "~3.0",
        "symfony/css-selector": "~3.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
						"Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
						"tests/BrowserKitTestCase.php",
            "tests/InteractsWithDatabase.php",
            "tests/CreatesUser.php",
            "tests/TestHelper.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
